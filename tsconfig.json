{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "outDir": "./dist/",
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
